<div>
  <h1 class="text-center mt-4">Categories List</h1>
  <div class="container mt-4">
    <%= will_paginate @categories, class: 'apple_pagination mb-4 mt-4' %>
    <% @categories.each do |category| %>
      <div class="row justify-content-center">
        <div class="col-6">
          <div class="card text-center shadow mb-5 rounded border">
            <div class="card-header font-italic bg-dark text-white">
              <%= category.name %>
            </div>
            <div class="card-body bg-white">
              <%= link_to "View", 
                          category_path(category), 
                          class: 'btn btn-outline-success' 
              %>
              <% if logged_in? && current_user.admin? %>
                <%= link_to "Edit", 
                            edit_category_path(category), 
                            class: 'btn btn-outline-primary' 
                %>
                <%= link_to "Delete", 
                            category_path(category), 
                            method: :delete, 
                            data: {confirm: 'Are you sure?'} ,
                            class: 'btn btn-outline-danger'
                %>
              <% end %> 
            </div>
            <div class="card-footer bg-dark text-white">
              Created about <%= time_ago_in_words(category.created_at) %> ago, 
              Updated about <%= time_ago_in_words(category.updated_at) %> ago 
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= will_paginate @articles, class: 'apple_pagination mb-4' %>
  </div>
</div>