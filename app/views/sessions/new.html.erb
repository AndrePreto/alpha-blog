<div class="container">
  <div class="row align-items-center justify-content-center vh-80">
    <div class="col-4">
      <%= form_with scope: :session, url: login_path, local: true, class: 'bg-light rounded p-3 border shadow' do |form| %>
        <div class="form-group">
          <%= form.label :email, 'Email Address' %>
          <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
        </div>
        <hr class="mt-4">
        <div class="form-group mt-4">
          <%= form.submit 'Sign In', class: 'btn btn-primary w-100'%>
        </div>
      <% end %>
      <div class="text-center p-3">
        <%= link_to '[ Back ]', root_path, class: 'text-dark' %>
      </div>
    </div>
  </div>
</div>